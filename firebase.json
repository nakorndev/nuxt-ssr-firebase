{
  "functions": {
    "source": "functions",
    "predeploy": [
      "cd functions && npm run predeploy && rm package-lock.json && rm -rf node_modules && npm install",
      "npm --prefix src run build",
      "cp src/nuxt.config.js functions/nuxt.config.js"
    ]
  },
  "hosting": {
    "public": "public",
    "predeploy": [
      "rm -rf public",
      "mkdir public",
      "mkdir public/_nuxt",
      "cp -a functions/.nuxt/dist/client/. public/_nuxt",
      "cp -a src/static/. public/"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nuxtApp"
      }
    ]
  }
}
